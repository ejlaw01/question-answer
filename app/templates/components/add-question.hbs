{{#if addNewQuestion}}
  <h3>What are you wondering?</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Name:</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="query">Question:</label>
        {{input value=query id="query"}}
      </div>
      <div class="form-group">
        <label for="details">Details:</label>
        {{input value=details id="details"}}
      </div>
      <button {{action 'saveQuestion'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>Ask Question</button>
{{/if}}
