{{#if editQuestionForm}}
  <h3>Edit</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Name:</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>
      <div class="form-group">
        <label for="query">Question:</label>
        {{input value=query id="query" placeholder=question.query}}
      </div>
      <div class="form-group">
        <label for="details">Details:</label>
        {{input value=details id="details" placeholder=question.details}}
      </div>
      <button {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
<button {{action 'editQuestionForm'}}>Edit Question</button>
{{/if}}
